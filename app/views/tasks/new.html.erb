<h1>Create a Task</h1>

<%= form_for @task, :url => project_tasks_path do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :start_date %>
    <%= f.text_field :start_date %>
  </div>
  <div class="field">
    <%= f.label :due_date %>
    <%= f.text_field :due_date %>
  </div>
  <div class="field">
    <%= f.label :status %>
    <%= f.text_field :status %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
