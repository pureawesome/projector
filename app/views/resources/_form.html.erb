<%= form_for @resource do |f| %>
  <%= render 'shared/errors', object: @resource %>
  <fieldset>
    <div class="field form-group">
      <%= f.label :name %>
      <%= f.text_field :name, :class => "form-control" %>
    </div>
    <div class="field form-group">
      <%= f.label :description %>
      <%= f.text_area :description, :class => "form-control" %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
  </fieldset>
<% end %>
