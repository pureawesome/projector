<h1>Sign In</h1>

<%= form_tag sign_in_path do %>
  <fieldset>
    <div class="field">
      <%= label_tag :email %><br />
      <%= text_field_tag :email, params[:email] %>
    </div>
    <div class="field">
      <%= label_tag :password %><br />
      <%= text_field_tag :password %>
    </div>
    <div class="actions">
      <%= submit_tag 'Sign In' %>
    </div>
  </fieldset>
<% end %>
