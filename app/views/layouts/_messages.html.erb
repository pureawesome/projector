<% flash.each do |k, v| %>
  <% if v.is_a?(String) %>
    <div role="alert" class="alert alert-dismissible alert-<%= flash_class(k) %>">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <%= content_tag :div, v %>
    </div>
  <% end %>
<% end %>
