<h1><%= @project.name %></h1>

<table>
  <thead>
    <tr>
      <td><%= "#{pluralize(@tasks.count, "tasks")}" %></td>
    </tr>
  </thead>
  <tbody>
    <tr>
      <% @tasks.each do |t| %>
      <td>
        <%= t.name %>
      </td>
      <% end %>
    </tr>
  </tbody>
</table>
<%= link_to('Create a new task', new_project_task_path(@project)) %>

<%= link_to('Back to Projects', projects_path) %>
